<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RecordingDiskView">
        <attr name="startColor" format="reference|color"/>
        <attr name="centerColor" format="reference|color"/>
        <attr name="endColor" format="reference|color"/>
        <attr name="totalRadian" format="integer"/>
        <attr name="titles" format="string|reference"/>
        <attr name="content" format="string|reference"/>
        <attr name="isNeedTitle" format="boolean"/>
        <attr name="isNeedRecordingDisk" format="boolean"/>
        <attr name="maxCount" format="integer"/>
        <attr name="circularBg" format="color|reference"/>
        <attr name="hintText" format="string|reference"/>
        <attr name="hintTextBg" format="integer|reference"/>
        <attr name="titleBg" format="integer|reference"/>
        <attr name="contentBg" format="integer|reference"/>
    </declare-styleable>
    <declare-styleable name="SpringBackScrollView" >
        <attr name="header" format="reference" />
        <attr name="headerHeight" format="dimension" />
        <attr name="headerVisibleHeight" format="dimension" />
    </declare-styleable>



    <declare-styleable name="EffectiveShapeView">
        <attr name="shape" format="integer">
            <enum name="circle" value="1"/>
            <enum name="rectangle" value="2"/>
            <enum name="round_rectangle" value="3"/>
            <enum name="square" value="4"/>
            <enum name="polygon" value="5"/>
        </attr>
        <attr name="decorations_direction" format="integer">
            <enum name="left_top" value="1"/>
            <enum name="left_bottom" value="2"/>
            <enum name="right_top" value="3"/>
            <enum name="right_bottom" value="4"/>
        </attr>

        <attr name="decorations_src" format="reference"/>
        <attr name="radius_x" format="float"/>
        <attr name="radius_y" format="float"/>
        <attr name="sides" format="integer"/>
    </declare-styleable>

    <declare-styleable name="FilletImageView">
        <attr name="radiusX" format="float"/>
        <attr name="radiusY" format="float"/>
        <attr name="imageSource" format="reference"/>
        <attr name="shaper" format="enum">
            <enum name="circular" value="0"/>
            <enum name="rectangle" value="1"/>
        </attr>
        <attr name="isNeedRing" format="boolean"/>
        <attr name="ringColor" format="color|reference"/>
    </declare-styleable>

</resources>
